<%#= cl_image_tag @shooting.photos[0].key, {class: "d-block "}%>
<%# @shooting.photos[1..-1].each_with_index do |photo, index|%>
  <%#= cl_image_tag photo.key, {class: "d-block"}%>



    <div class="full-height-wrap fixed-wrap">
      <div class="bg">

          <!-- Wrapper for slides -->
          <div class="carousel-inner">
            <div class="carousel-item active">
              <%= cl_image_tag @shooting.photos[0].key, class: "d-block ", id: 'carou-image', alt: "First slide" %>
            </div>
            <% @shooting.photos[1..-1].each do |photo|%>
              <div class="carousel-item">
                <%= cl_image_tag photo.key, class: "d-block", id: 'carou-image'%>
              </div>
            <% end %>
          </div>

          <!-- portfolio counter -->
        <!-- <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel"> -->
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="count-folio cdc" style="top: 50%; margin-top: -42px;">
            <div class="num-album"><a href="#carouselExampleIndicators" role="button" data-slide="next"><i
                  class="fas fa-chevron-right"></i></a></div>
            <div class="all-album">
              <a href="#carouselExampleIndicators" role="button" data-slide="prev"><i
                  class="fas fa-chevron-left"></i></a></div>

          </div>
        </div>

      </div>
    </div>


  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
